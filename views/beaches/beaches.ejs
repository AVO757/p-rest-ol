<!DOCTYPE html>
<html>
<head>
    <script src="/js/jquery-slim.min.js" type="text/javascript"></script>
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/beaches.css">
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>
</head>

<body>
    <div>
        <nav class="navbar navbar-expand-sm navbar-light bg-light">
            <a class="navbar-brand" href="/">Project REST</a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/beaches">Beaches</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true"
                            aria-expanded="false">
                            About
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="#">Me</a>
                            <a class="dropdown-item" href="#">Website</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contact</a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    <% if(!currentUser) {%>
                        <li class="nav-item">
                            <a class="nav-link" href="/login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/register">Sign Up</a>
                        </li>
                        <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Signed in as
                                <%= currentUser.username %>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/logout">Logout</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </nav>
    </div>


    <!-- flash messages -->
    <div class="container">
        <% if(error && error.length > 0) {%>
            <div class="alert alert-warning" role="alert">
                <%=error%>
            </div>
        <% } %>
        <% if(success && success.length > 0) {%>
            <div class="alert alert-success" role="alert">
                <%=success%>
            </div>
        <% } %>
    </div>

    


    <div class="content">
        <div class="header">
            <h1>Wonderful beaches</h1>
            <hr>
        </div>
        <div class="sub-header">
            <a href="/beaches/new">Create a new beach</a>
        </div>
        <div class="beaches container-fluid">
            <% beaches.forEach(function(beach) { %>
                <div class=" beach">
                    <img class="image" width="50" height="50" src="<%=beach.image%>">
                    <div class="detail">
                        <h5 class="name">
                            <%=beach.name%>
                        </h5>
                        <p class="location font-weight-light">
                            <%=beach.location%>
                        </p>
                    </div>
                    <a class="link" href="/beaches/<%=beach._id%>">View beach</a>
                </div>
            <%});%>
        </div>
    </div>

<%include ../partials/footer %>