<!DOCTYPE html>
<html>
<head>
    <script src="/js/jquery-slim.min.js" type="text/javascript"></script>
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/beaches.css">
    <link href="https://fonts.googleapis.com/css?family=Rancho" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp"
        crossorigin="anonymous">
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>
</head>

<body>

    <div>
        <nav class="navbar navbar-expand-sm navbar-light bg-light">
            <a class="navbar-brand" href="/">Project REST
                <i class="fas fa-anchor"></i>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/beaches">Beaches</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/about/Project-REST">About</a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    <% if(!currentUser) {%>
                        <li class="nav-item">
                            <a class="nav-link" href="/login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/register">Sign Up</a>
                        </li>
                        <% } else { %>
                            <li class="nav-item">
                                <a class="nav-link" href="#" onclick="return false">Signed in as
                                    <%= currentUser.username %>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/logout">Logout</a>
                            </li>
                            <% } %>
                </ul>
            </div>
        </nav>
    </div>


    <!-- flash messages -->
    <div class="container" id="flash">
        <% if(error && error.length > 0) {%>
            <div class="alert alert-warning" role="alert">
                <%=error%>
            </div>
        <% } %>
        <% if(success && success.length > 0) {%>
            <div class="alert alert-success" role="alert">
                <%=success%>
            </div>
        <% } %>
    </div>

    

    <div class="grid">
        <div class="content">
            <div class="header">
                <h1>Wonderful beaches</h1>
                <hr>
                <a href="/beaches/new">Create a new beach</a>
            </div>
            <div class="beaches">
                <% beaches.forEach(function(beach) { %>
                    <div class=" beach border rounded">
                        <img width="50" height="50" src="<%=beach.image%>">
                        <h4 class="name"><%=beach.name%></h4>
                        <p class="location font-weight-light"><%=beach.location%></p>
                        <a class="link" href="/beaches/<%=beach._id%>">View beach</a>
                    </div>
                <%});%>
            </div>
        </div>
        <footer>
            <div class="container contact">
                <p id="email">vo.c.alexander@gmail.com</p>
                <p id="created">Created by Alexander Van Oers</p>
                <a id="linkedIn" href="https://www.linkedin.com/in/alexander-van-oers-3284b3124/">LinkedIn</a>
                <p id="location">London, UK</p>
            </div>
        </footer>
    </div>
    

<%include ../partials/footer %>