<!DOCTYPE html>
<html>
<head>
    <script src="/js/jquery-slim.min.js" type="text/javascript"></script>
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/show.css">
    <link rel="stylesheet" href="/stylesheets/footer.css">
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>
</head>
<body>

    <div>
        <nav class="navbar navbar-expand-sm navbar-light bg-light">
            <a class="navbar-brand" href="/">Project REST</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/beaches">Beaches</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true"
                            aria-expanded="false">
                            About
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="/about/portfolio">Me</a>
                            <a class="dropdown-item" href="/about/portfolio">Portfolio</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contact</a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    <% if(!currentUser) {%>
                        <li class="nav-item">
                            <a class="nav-link" href="/login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/register">Sign Up</a>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Signed in as
                                <%= currentUser.username %>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/logout">Logout</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </nav>
    </div>

    <!-- flash messages -->
    <div class="container">
        <% if(error && error.length > 0) {%>
            <div class="alert alert-warning" role="alert">
                <%=error%>
            </div>
        <% } %>
        <% if(success && success.length > 0) {%>
            <div class="alert alert-success" role="alert">
                <%=success%>
            </div>
        <% } %>
    </div>


    <div class="grid">
        <div class="beachName">
            <h1><%=beach.name%></h1>
        </div>
        <div class="content">
            <div class="card">
                <img class="beachImage card-img-top" src="<%=beach.image%>">
                <div class="beachDetails card-body">
                    <p><%=beach.location%></p>
                    <p class="font-italic card-text"><%=beach.description%></p>
                </div>
            </div>

            <div class="beachOptions">
                <!-- hide buttons for unauthorized users -->
                <% if(currentUser && beach.author.id.equals(currentUser._id)) {%>
                    <a class="btn btn-success" href="/beaches/<%=beach._id%>/edit">Edit beach</a>
                    <form action="/beaches/<%=beach._id%>?_method=DELETE" method="POST">
                        <input class="btn btn-danger" type="submit" value="Delete beach">
                    </form>
                <% } %>
                <a class="btn btn-warning" href="/beaches">Go Back</a>
            </div>
        </div>

        <div id="map"></div>

        <div class="commentSection card">
            <h5 class="card-header">Leave here your thoughts<a class="btn btn-info float-right" href="/beaches/<%=beach._id%>/comments/new">Add comment</a></h5>
            <%beach.comments.forEach(function(comment) {%>
                <div class="comments card-body">
                    <p class="commentText"><%=comment.text%></p>
                    <p class="commentAuthor"><%=comment.author.username%></p>
                    <div class="commentOptions">
                        <% if(currentUser && comment.author.id.equals(currentUser._id)) {%>
                            <a class="commentEdit" href="/beaches/<%=beach._id%>/comments/<%=comment._id%>/edit">Edit</a>
                            <form action="/beaches/<%=beach._id%>/comments/<%=comment.id%>?_method=DELETE" method="POST">
                                <input class="btn btn-danger commentDelete" type="submit" value="Delete">
                            </form>
                        <% } %>
                    </div>
                </div>
            <%})%>
        </div>
    </div>

    <script>
        function initMap() {
            var lat =  <%= beach.lat %>;
            var lng = <%= beach.lng %>;
            var center = { lat: lat, lng: lng };
            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 8,
                center: center,
                scrollwheel: false
            });
            var contentString = `
          <strong><%= beach.name %><br />
          <%= beach.location %></strong>
          <p><%= beach.description %></p>
        `
            var infowindow = new google.maps.InfoWindow({
                content: contentString
            });
            var marker = new google.maps.Marker({
                position: center,
                map: map
            });
            marker.addListener('click', function () {
                infowindow.open(map, marker);
            });
        }
    </script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBIiL4vc95xxbrunoFJx1nq0g1pFKuQm04&callback=initMap"></script>


<%include ../partials/footer %>