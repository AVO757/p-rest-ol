<!DOCTYPE html>
<html>
<head>
    <script src="/js/jquery-slim.min.js" type="text/javascript"></script>
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/show.css">
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>
</head>
<body>

    <div>
        <nav class="navbar navbar-expand-sm navbar-light bg-light">
            <a class="navbar-brand" href="/">Project REST</a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/beaches">Beaches</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true"
                            aria-expanded="false">
                            About
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="#">Me</a>
                            <a class="dropdown-item" href="#">Website</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contact</a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    <% if(!currentUser) {%>
                        <li class="nav-item">
                            <a class="nav-link" href="/login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/register">Sign Up</a>
                        </li>
                        <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Signed in as
                                <%= currentUser.username %>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/logout">Logout</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </nav>
    </div>


    <div class="grid">
        <div class="beachName">
            <h1><%=beach.name%></h1>
        </div>
        <div class="content">
            <div class="card">
                <img class="beachImage card-img-top" src="<%=beach.image%>">
                <div class="beachDetails card-body">
                    <p><%=beach.location%></p>
                    <p class="font-italic card-text"><%=beach.description%></p>
                </div>
            </div>

            <div class="beachOptions">
                <!-- hide buttons for unauthorized users -->
                <% if(currentUser && beach.author.id.equals(currentUser._id)) {%>
                    <a class="btn btn-success" href="/beaches/<%=beach._id%>/edit">Edit beach</a>
                    <form action="/beaches/<%=beach._id%>?_method=DELETE" method="POST">
                        <input class="btn btn-danger" type="submit" value="Delete beach">
                    </form>
                <% } %>
                <a class="btn btn-info" href="/beaches/<%=beach._id%>/comments/new">Add comment</a>
                <a class="btn btn-warning float-right" href="/beaches">Go Back</a>
            </div>
        </div>
        <div class="commentSection card">
            <h5 class="card-header">Leave here your thoughts</h5>
            <%beach.comments.forEach(function(comment) {%>
                <div class="comments card-body">
                    <p class="commentText"><%=comment.text%></p>
                    <p class="commentAuthor"><%=comment.author.username%></p>
                    <div class="commentOptions">
                        <% if(currentUser && comment.author.id.equals(currentUser._id)) {%>
                            <a class="commentEdit" href="/beaches/<%=beach._id%>/comments/<%=comment._id%>/edit">Edit</a>
                            <form action="/beaches/<%=beach._id%>/comments/<%=comment.id%>?_method=DELETE" method="POST">
                                <input class="btn btn-danger commentDelete" type="submit" value="Delete">
                            </form>
                        <% } %>
                    </div>
                </div>
            <%})%>
        </div>
    </div>


<%include ../partials/footer %>